<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/portfolioBackground"
    tools:context="com.example.bkambo.myappportfolio.MainActivity">

    <TextView
        android:text="@string/textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/button_portfolio_margin"
        android:id="@+id/portfolioTitle"
        android:paddingLeft="@dimen/textview_title_left_padding"
        android:paddingRight="@dimen/textview_title_right_padding"
        android:paddingTop="@dimen/textview_title_top_padding"
        android:paddingBottom="@dimen/textview_title_bottom_padding"
        android:textSize="@dimen/textview_title_text_size"
        android:textStyle="normal|bold"/>
    <Button
        android:text="@string/btn_popular_movies"
        android:layout_height="wrap_content"
        android:id="@+id/buttonPopularMovies"
        android:background="@color/buttonBackground"
        android:layout_width="@dimen/button_portfolio_width"
        android:paddingTop="@dimen/textview_title_top_padding"
        android:paddingBottom="@dimen/textview_title_bottom_padding"
        android:layout_marginTop="@dimen/button_portfolio_margin"
        android:onClick="displayToast"
        />

    <Button
        android:text="@string/btn_stock_hawk"
        android:layout_height="wrap_content"
        android:id="@+id/buttonStockHawk"
        android:background="@color/buttonBackground"
        android:layout_width="@dimen/button_portfolio_width"
        android:layout_marginTop="@dimen/button_portfolio_margin"
        android:paddingBottom="@dimen/textview_title_bottom_padding"
        android:paddingTop="@dimen/textview_title_top_padding"
        android:onClick="displayToast" />

    <Button
        android:text="@string/btn_build_it_better"
        android:layout_width="@dimen/button_portfolio_width"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBuildItBetter"
        android:background="@color/buttonBackground"
        android:layout_marginTop="@dimen/button_portfolio_margin"
        android:paddingBottom="@dimen/textview_title_bottom_padding"
        android:paddingTop="@dimen/textview_title_top_padding"
        android:onClick="displayToast" />

    <Button
        android:text="@string/btn_make_app_material"
        android:layout_width="@dimen/button_portfolio_width"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMakeAppMaterial"
        android:background="@color/buttonBackground"
        android:layout_marginTop="@dimen/button_portfolio_margin"
        android:paddingBottom="@dimen/textview_title_bottom_padding"
        android:paddingTop="@dimen/textview_title_top_padding"
        android:onClick="displayToast" />

    <Button
        android:text="@string/btn_go_ubiquitous"
        android:layout_width="@dimen/button_portfolio_width"
        android:layout_height="wrap_content"
        android:id="@+id/buttonGoUbiquitous"
        android:background="@color/buttonBackground"
        android:layout_marginTop="@dimen/button_portfolio_margin"
        android:paddingBottom="@dimen/textview_title_bottom_padding"
        android:paddingTop="@dimen/textview_title_top_padding"
        android:onClick="displayToast" />

    <Button
        android:text="@string/btn_capstone_my_app"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCapstone"
        android:background="@color/buttonCapstoneBackground"
        android:layout_width="@dimen/button_portfolio_width"
        android:layout_marginTop="@dimen/button_portfolio_margin"
        android:paddingTop="@dimen/textview_title_top_padding"
        android:paddingBottom="@dimen/textview_title_bottom_padding"
        android:textStyle="normal|bold"
        android:onClick="displayToast" />
</LinearLayout>
</ScrollView>